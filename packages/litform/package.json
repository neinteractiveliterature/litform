{
  "name": "@neinteractiveliterature/litform",
  "description": "A library of shared frontend components used in NEIL's web apps",
  "author": "Nat Budin <natbudin@gmail.com>",
  "license": "MIT",
  "version": "0.33.1",
  "main": "dist/cjs/index.js",
  "module": "dist/es/index.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    "import": {
      "types": "./dist/types/index.d.ts",
      "default": "./dist/es/index.js"
    },
    "require": {
      "types": "./dist/types/index.d.ts",
      "default": "./dist/cjs/index.js"
    }
  },
  "repository": "https://github.com/neinteractiveliterature/litform",
  "sideEffects": false,
  "scripts": {
    "build": "rm -rf dist && vite build"
  },
  "dependencies": {
    "@neinteractiveliterature/litform-codemirror": "workspace:^",
    "@neinteractiveliterature/litform-controls": "workspace:^",
    "@neinteractiveliterature/litform-core": "workspace:^",
    "@neinteractiveliterature/litform-modals": "workspace:^",
    "@neinteractiveliterature/litform-popovers": "workspace:^"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "typescript": "^5.7.3",
    "vite": "^6.1.1",
    "vitest": "^3.0.6"
  }
}
