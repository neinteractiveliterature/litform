    "@types/testing-library__jest-dom": "^5.14.3",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "assert": "^2.0.0",
    "babel-jest": "^29.0.0",
