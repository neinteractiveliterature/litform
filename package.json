{
  "name": "@neinteractiveliterature/litform",
  "description": "A library of shared frontend components used in NEIL's web apps",
  "author": "Nat Budin <natbudin@gmail.com>",
  "license": "MIT",
  "version": "0.12.1",
  "module": "lib",
  "main": "dist",
  "repository": "https://github.com/neinteractiveliterature/litform",
  "sideEffects": [
    "./lib/LiquidMultiplexModes.js"
  ],
  "files": [
    "dist",
    "lib"
  ],
  "scripts": {
    "build": "yarn run build:lib && yarn run build:dist",
    "build:dist": "rm -rf dist/* && tsc --outDir dist/ --module commonjs",
    "build:lib": "rm -rf lib/* && tsc --outDir lib/",
    "prepublishOnly": "yarn run build && pinst --disable",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "test": "jest",
    "test:watch": "jest --watch",
    "postinstall": "husky install",
    "postpublish": "pinst --enable"
  },
  "peerDependencies": {
    "@apollo/client": "^3.3.18",
    "graphql": "^15.5.0",
    "react": "^17.0.2"
  },
  "devDependencies": {
    "@apollo/client": "3.4.11",
    "@babel/cli": "7.15.4",
    "@babel/core": "7.15.5",
    "@babel/preset-env": "7.15.6",
    "@babel/preset-typescript": "7.15.0",
    "@storybook/addon-actions": "^6.3.6",
    "@storybook/addon-essentials": "^6.3.6",
    "@storybook/addon-links": "^6.3.6",
    "@storybook/addons": "^6.3.6",
    "@storybook/preset-scss": "^1.0.3",
    "@storybook/react": "^6.3.6",
    "@storybook/theming": "^6.3.6",
    "@testing-library/jest-dom": "^5.12.0",
    "@testing-library/react": "^12.0.0",
    "@types/codemirror": "^5.60.0",
    "@types/jest": "^27.0.1",
    "@types/lodash": "^4.14.169",
    "@types/luxon": "^2.0.0",
    "@types/react": "^17.0.20",
    "@types/react-dnd": "^3.0.2",
    "@types/react-dnd-multi-backend": "^6.0.1",
    "@types/testing-library__jest-dom": "^5.14.1",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.23.0",
    "@typescript-eslint/parser": "^4.23.0",
    "babel-loader": "8.2.2",
    "babel-plugin-add-import-extension": "^1.5.1",
    "bootstrap": "^5.0.1",
    "bootstrap-icons": "^1.5.0",
    "codemirror": "^5.61.0",
    "css-loader": "^6.0.0",
    "eslint": "^7.26.0",
    "eslint-plugin-react": "^7.25.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "font-awesome": "^4.7.0",
    "graphql": "^15.5.0",
    "husky": ">=6",
    "jest": "27.1.1",
    "lint-staged": ">=10",
    "luxon": "^2.0.0",
    "pinst": ">=2",
    "prettier": "^2.3.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "sass": "^1.32.13",
    "sass-loader": "^12.0.0",
    "style-loader": "^3.0.0",
    "ts-jest": "^27.0.2",
    "typescript": "^4.3.0",
    "webpack": "^5.0.0"
  },
  "dependencies": {
    "@popperjs/core": "^2.10.1",
    "classnames": "^2.3.1",
    "codemirror": "^5.61.0",
    "copy-to-clipboard": "^3.3.1",
    "lodash": "^4.17.21",
    "luxon": "^2.0.0",
    "react-bootstrap4-modal": "^2.0.0",
    "react-codemirror2": "^7.2.1",
    "react-cool-onclickoutside": "^1.6.2",
    "react-dnd": "^14.0.2",
    "react-dnd-html5-backend": "^14.0.0",
    "react-dnd-multi-backend": "^6.0.2",
    "react-dnd-touch-backend": "^14.0.0",
    "react-popper": "^2.2.5",
    "uuid": "^8.3.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --cache --fix",
    "*.{js,jsx,ts,tsx,css,md}": "prettier --write"
  }
}
