    "style-loader": "^3.3.1",
    "typescript": "^4.7.3",
    "util": "^0.12.4",
    "webpack": "^5.73.0"
  },
  "dependencies": {
    "@codemirror/commands": "^6.3.3",
    "@codemirror/lang-html": "^6.4.8",
    "@codemirror/language": "^6.10.1",
    "@codemirror/state": "^6.4.1",
    "@codemirror/view": "^6.25.1",
    "@lezer/highlight": "^1.2.0",
