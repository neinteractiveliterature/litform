{
  "name": "@neinteractiveliterature/litform",
  "description": "A library of shared frontend components used in NEIL's web apps",
  "author": "Nat Budin <natbudin@gmail.com>",
  "license": "MIT",
  "version": "0.22.1",
  "module": "lib",
  "main": "dist",
  "repository": "https://github.com/neinteractiveliterature/litform",
  "sideEffects": [],
  "files": [
    "dist",
    "lib"
  ],
  "scripts": {
    "build": "yarn run build:lib && yarn run build:dist",
    "build:grammars": "lezer-generator src/liquid.grammar -o src/liquidGrammar.generated.js",
    "build:dist": "rm -rf dist && tsc -p tsconfig.build.json --outDir dist/ --module commonjs",
    "build:lib": "rm -rf lib && tsc -p tsconfig.build.json --outDir lib/",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "test": "jest",
    "test:watch": "jest --watch",
    "postinstall": "husky install",
    "prepack": "yarn run build && pinst --disable",
    "postpack": "pinst --enable"
  },
  "peerDependencies": {
    "@apollo/client": "^3.3.18",
    "graphql": "^15.5.0",
    "react": "^17.0.2"
  },
  "devDependencies": {
    "@apollo/client": "3.5.10",
    "@babel/cli": "7.17.6",
    "@babel/core": "^7.17.9",
    "@babel/preset-env": "7.16.11",
    "@babel/preset-react": "^7.16.7",
    "@babel/preset-typescript": "7.16.7",
    "@codemirror/lang-javascript": "^0.20.0",
    "@codemirror/lang-markdown": "^0.20.0",
    "@codemirror/theme-one-dark": "^0.20.0",
    "@lezer/common": "^0.16.0",
    "@lezer/generator": "^0.16.0",
    "@mdx-js/react": "^2.1.1",
    "@storybook/addon-actions": "^6.4.22",
    "@storybook/addon-docs": "^6.4.22",
    "@storybook/addon-essentials": "^6.4.22",
    "@storybook/addon-links": "^6.4.22",
    "@storybook/addons": "^6.4.22",
    "@storybook/builder-webpack5": "^6.4.22",
    "@storybook/components": "^6.4.22",
    "@storybook/core-events": "^6.4.22",
    "@storybook/manager-webpack5": "^6.4.22",
    "@storybook/preset-scss": "^1.0.3",
    "@storybook/react": "^6.4.22",
    "@storybook/theming": "^6.4.22",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.0.0",
    "@types/jest": "^27.4.1",
    "@types/lodash": "^4.14.182",
    "@types/luxon": "^2.3.1",
    "@types/mdx-js__react": "^1.5.5",
    "@types/node": "^16.10.3",
    "@types/react": "^17.0.27",
    "@types/testing-library__jest-dom": "^5.14.3",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.20.0",
    "@typescript-eslint/parser": "^5.20.0",
    "assert": "^2.0.0",
    "babel-jest": "^27.5.1",
    "babel-loader": "8.2.5",
    "babel-plugin-add-import-extension": "^1.6.0",
    "bootstrap": "^5.1.3",
    "bootstrap-icons": "^1.8.1",
    "css-loader": "^6.7.1",
    "eslint": "^8.13.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.4.0",
    "graphql": "^16.3.0",
    "husky": "^7.0.4",
    "jest": "27.5.1",
    "lint-staged": "^12.4.0",
    "luxon": "^2.0.0",
    "pinst": ">=2",
