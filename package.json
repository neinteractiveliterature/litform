{
  "name": "@neinteractiveliterature/litform",
  "description": "A library of shared frontend components used in NEIL's web apps",
  "author": "Nat Budin <natbudin@gmail.com>",
  "license": "MIT",
  "version": "0.21.0",
  "module": "lib",
  "main": "dist",
  "repository": "https://github.com/neinteractiveliterature/litform",
  "sideEffects": [
    "./lib/LiquidMultiplexModes.js"
  ],
  "files": [
    "dist",
    "lib"
  ],
  "scripts": {
    "build": "yarn run build:lib && yarn run build:dist",
    "build:grammars": "lezer-generator src/liquid.grammar -o src/liquidGrammar.generated.js",
    "build:dist": "rm -rf dist/* && tsc --outDir dist/ --module commonjs",
    "build:lib": "rm -rf lib/* && tsc --outDir lib/",
    "prepublishOnly": "yarn run build && yarn run pinst --disable",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "test": "jest",
    "test:watch": "jest --watch",
    "postinstall": "husky install",
    "postpublish": "yarn run pinst --enable"
  },
  "peerDependencies": {
    "@apollo/client": "^3.3.18",
    "graphql": "^15.5.0",
    "react": "^17.0.2"
  },
  "devDependencies": {
    "@apollo/client": "3.5.10",
    "@babel/cli": "7.17.6",
